{% block body %}
    <h1>All posts</h1>
    <a href="/form">Cr√©er un nouveau post</a>
    {% for post in posts %}
        <div style="border-style: solid; border-width: 1px; border-radius: 15px; border-color: black;">
            <a href="/post/{{post.getId()}}"><h2>{{post.getTitle()}}</h2></a>
