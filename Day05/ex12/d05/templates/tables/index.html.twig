{% extends 'base.html.twig'%}
{% block body %}

<h1>TABLE INFORMATIONS</h1>
<table>
    <tr>
      <th>id</th>
      <th>username</th>
      <th>name</th>
      <th>age</th>
      <th>email</th>
    </tr>
    {% for information in informations %}
    <tr>
      <td>{{ information.id}}</td>
      <td>{{ information.username}}</td>
      <td>{{ information.name}}</td>
      <td>{{ information.age}}</td>
      <td>{{ information.email.email}}</td>
    </tr>
      {% endfor %}

</table>

<h1>TABLE email</h1>
<table>
    <tr>
    {% for column_email in columns_email %}
        <th>{{column_email}}</th>
      {% endfor %}
    </tr>
    {% for email in emails %}
    <tr>
    {% for column_email in columns_email %}
      <td>{{ attribute(email, column_email)}}</td>
    {% endfor %}
    </tr>
    {% endfor %}
</table>

  <h1>Form - Filter/Sort</h1>
  <form name="filter_sort_form" action="success_filter" method="POST">
  <label>Filter by:</label>
  <select name="filter" id="filter">
    <option value="person_id" selected>person_id</option>
    <option value="username">username</option>
    <option value="_name">name</option>
    <option value="email">email</option>
    <option value="_enable">enable</option>
    <option value="birthdate">birthdate</option>
    <option value="address">address</option>
    <option value="bank_account_num">bank_account_num</option>
  </select>
  <input type="text" name="filter_value" required></input>
  <br>
  <label>Sort by:</label>
  <select name="sort" id="sort">
    <option value="increase" selected>Ordre croissant</option>
    <option value="decrease">Ordre d√©croissant</option>
  </select><br>
  <input type="submit">

  </form>

{% endblock %}