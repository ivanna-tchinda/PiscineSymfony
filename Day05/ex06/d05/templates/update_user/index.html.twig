{% extends 'base.html.twig' %}

{% block body %}

<form name="ex02_form" action="success_update" method="POST">
  Username: <input type="text" name="username" value="{{ user['username'] }}" required><br>
  Name: <input type="text" name="name" value="{{user['username']}}" required><br>
  E-mail: <input type="text" name="email" value="{{user['username']}}"" required><br>
  <label for="enable">Enable?</label>
  <select name="enable" id="enable">
    <option value="true" selected>Yes</option>
    <option value="false">No</option>
  </select><br>
  Birthdate : <input type="date" name="birthdate" value="{{user['username']}}" required><br>
  Address : <input type="text" name="address" value="{{user['username']}}" required><br>
  <input type="submit">
</form>

{% endblock %}